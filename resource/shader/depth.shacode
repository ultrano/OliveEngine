#include <OvVShaderConst.h>
#include <OvPShaderConst.h>

void Vmain( in float3 pos : POSITION, out vector output : POSITION, out float3 depth : TEXCOORD0 )
{
	output			= mul( vector( pos, 1 ), WorldViewProject );
	float3 worldpos = mul( pos, World);
	depth = ViewPos - worldpos;
};
void Pmain( in float3 depth : TEXCOORD0, out vector col0 : COLOR0 )
{
	col0 = abs(length(depth));
}